<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maps.CampusActivity">

    <ImageView
        android:id="@+id/iv_campus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/map_campus_page_0001"
        android:contentDescription="@string/campus_map" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/rotate"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="top|end"
        android:src="@drawable/baseline_rotate_90_degrees_cw_24"
        />

</FrameLayout>